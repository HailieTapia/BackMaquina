server { 
listen 443 ssl; 
server_name www.filograficos.com; 
ssl_certificate /etc/nginx/ssl/filograficos.crt; 
ssl_certificate_key /etc/nginx/ssl/filograficos.key; 
# Configuración para el frontend 
location /angular-app/ { 
root /home/luis/Documentos/WebFIlograficos/dist/web-filograficos; 
index index.html; 
try_files $uri $uri/ /angular-app/index.html; 
} 
# Configuración para el backend 
location /api/ { 
proxy_pass https://127.0.0.1:3000; 
proxy_http_version 1.1; 
proxy_set_header Upgrade $http_upgrade; 
proxy_set_header Connection 'upgrade'; 
proxy_set_header Host $host; 
proxy_cache_bypass $http_upgrade; 
proxy_ssl_verify off; 
} 
} 
server { 
listen 80; 
server_name www.filograficos.com; 
return 301 https://$host$request_uri; 
}
